@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Kategori Listesi";
}

<a asp-action="Create" class="btn btn-success btn-sm my-3">
    <i class="fas fa-clipboard-check mr-1"></i>
    Yeni Kategori Ekle
</a>

@if (0 >= Model.Count)
{
    <div class="alert alert-primary" role="alert">
        Kategori bulunamadı.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-pen mr-1"></i>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt mr-1"></i>
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

