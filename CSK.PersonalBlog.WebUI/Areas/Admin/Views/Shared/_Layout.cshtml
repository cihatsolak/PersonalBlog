<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Cihat SOLAK">

    <title>@ViewData["Title"] - Kamp Günlüğü</title>

    <!-- Styles -->
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/simple-sidebar.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    @RenderSection("PageSpecificCss", false)
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Kenar çubuğu -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                Kamp Günlüğü
                <br />
                <small class="float-right text-secondary" style="font-size:0.8rem">- Blogger</small>
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Blog" asp-action="List" class="list-group-item list-group-item-action bg-light">Blog</a>
                <a asp-controller="Category" asp-action="List" class="list-group-item list-group-item-action bg-light">Kategori</a>
                <a asp-area="" asp-controller="Account" asp-action="SignOut" class="list-group-item list-group-item-action bg-light">Çıkış Yap</a>
            </div>
        </div>

        <!--Sayfa içeriği -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/admin.js"></script>

    @*<script>

            var settings = {
                validClass: "is-valid",
                errorClass: "is-invalid"

            };
            $.validator.setDefaults(settings);
            $.validator.unobtrusive.options = settings;
        </script>*@

    @RenderSection("PageSpecificJs", false)

</body>

</html>
