@model List<AssignCategoryModel>
@{
    ViewData["Title"] = "Gönderiye Kategori Ata";
}

<form asp-action="AssignCategory" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].CategoryId" type="hidden" />
            <input asp-for="@Model[i].CategoryName" type="hidden" />

            <input asp-for="@Model[i].Exists" class="form-check-input" type="checkbox" />
            <label asp-for="@Model[i].Exists" class="form-check-label">@Model[i].CategoryName</label>
        </div>
    }
    <button type="submit" class="btn btn-success btn-sm">Kaydet</button>
</form>

